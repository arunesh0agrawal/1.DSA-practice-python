#include <iostream>
using namespace std;
int main() 
{
   for(int i=1;i<=5;i++)
   {
       for(int j=1;j<=5-i;j++)
       {
           cout<<" ";
       }
       int k=i;
       int count=i*2-1;
       while(i<=count && count>0)
       {
           cout<<k;
           count--;
           k++;
       }
       k--;
       while(count>0 && k>0)
       {
           k--;
           cout<<k;
           count--;
       }
       cout<<endl;
   }
